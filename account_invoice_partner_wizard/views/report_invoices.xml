<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoices">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <div class="page">
                    <div style='background-color:blue;text-align:center;'>
                        <div style='display:inline-block;background-color:red;float:left;'>
                            <strong>TAX</strong><p t-esc="data['partner_vat']"/>
                        </div>
                        <div style='display:inline-block;background-color:red;float:right;'>
                            <p>TAX ID</p><p t-esc="data['company_vat']"/>
                        </div>
                        <div style='display:inline-block;background-color:yellow;margin:auto'>
                            <h2> <span>Invoice</span></h2>
                        </div>
                    </div>
                    <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">CANT</th>
                            <th class="text-left">CODE DMC</th>
                            <th class="text-left">CODIGO FABRICANTE</th>
                            <th class="text-left">CONCEPT</th>
                            <th class="text-right">UNITARIO</th>
                            <th class="text-right">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                    <tr t-foreach="docs.invoice_line_ids" t-as="l">
                        <td class="text-center">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>

                        <td ><span t-field="l.product_id.barcode"/></td>

                        <td>
                            <span t-field="l.product_id.default_code"/>
                        </td>

                        <td><span t-field="l.name"/></td>
                        
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>


                        <td class="text-right">
                            <span t-field="l.price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
