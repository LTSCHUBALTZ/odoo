<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_invoice_document">
    <t t-call="account_invoice_partner_wizard.external_layout">
        <div class="page">
            <div class="row"><br/>
                <div class="col-xs-12" style="clear:both;" name="company_address">
                    <div style="float: left">
                        <span t-if="o.date_invoice"><span t-raw="data['date_literal']"/></span>
                    </div>
                    <br/>
                    <div style="float: left">
                        <span t-if="data['partner_name']">Customer: <span t-raw="data['partner_name']"/></span>
                    </div>
                    <div style="float: right;">
                        <span t-if="data['partner_vat']">TIN: <span t-raw="data['partner_vat']"/></span>
                    </div>
                </div>
            </div>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Description</th>
                        <th class="text-right">Unit Price</th>
                        <th class="text-right">Price</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td class="text-left">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-left"><span t-field="l.name"/></td>
                        <td class="text-right"><span t-field="l.price_unit"/></td>
                        <td class="text-right"><span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-12 border-black" style="clear:both;border-top: 1px solid black;">
                    <span style="float: left;"><strong>Son: </strong><span t-field="o.amount_to_text"/></span>
                    <span style="float: right;"><strong>Total: </strong><span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></span>
                </div>
            </div>
            <br/><br/>
            <p t-if="o.comment">
                <strong>Comment:</strong>
                <span t-field="o.comment"/>
            </p>
            <p t-if="o.payment_term_id">
                <span t-field="o.payment_term_id.note"/>
            </p>
            <p t-if="o.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="o.fiscal_position_id.note"/>
            </p>
            <div>
                <p class="left-margin-49">Control Code: <span t-raw="data['control_code_simple']"/>
                <br/>
                Fecha Limite de Emision: <span t-field="o.issuance_deadline"/></p>
            </div>
            <div style="float: center;">
                <img class="style-img" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %('QR', data['control_code'], 600, 600)"/>
            </div>
        </div>
    </t>
</template>

<template id="external_layout">
    <t t-set="company" t-value="res_company_wizard"/>
    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
    <t t-call="account_invoice_partner_wizard.external_layout_header" />
    <t t-raw="0" />
    <t t-call="account_invoice_partner_wizard.external_layout_footer" />
</template>

<template id="external_layout_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-2">
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
            </div>
            <div class="col-xs-9 text-left" style="margin-top:20px;" t-field="company.rml_header1"/>
        </div>
        <div class="row zero_min_height">
            <div class="col-xs-12">
                <div style="border-bottom: 1px solid black;"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12" style="clear:both;" name="company_address">
                <div style="float: left">
                    <div style="float: left" t-field="company.partner_id" t-field-options='{"widget": "contact", "fields": ["address", "name"],
                    "no_marker": true}'/>
                </div>
                <div style="float: right;">
                    <t t-if="company.partner_id.vat"><span style="float: center;">TIN: <span t-field="company.partner_id.vat"/></span><br/></t>
                    <t t-if="company.authorization_num"><span style="float: center;">Authorization: <span t-raw="data['company_authorization']"/></span><br/></t>
                    <span style="float: center;" t-if="o.invoice_control_number">Invoice num: <span t-field="o.invoice_control_number"/></span><br/>
                    <span style="float: center;" t-if="data['state'] is False">Original</span>
                </div>
                <div style="margin:0 auto;">
                    <h2 class="text-center">
                        <t t-if="data['state'] is False">
                            <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                            <span t-if="o.type == 'out_refund'">Refund</span>
                            <span t-if="o.type == 'in_refund'">Vendor Refund</span>
                            <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        </t>
                        <span t-if="data['state'] is True">Duplicate</span>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="external_layout_footer">
    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;">
            <div t-if="o.control_code" class="row" style="clear:both;">
                <p t-if="company.custom_footer" style="float: center;"><span t-raw="company.rml_footer"/></p>
            </div>
            <ul class="list-inline">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </div>
</template>

<template id="report_invoices">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="account_invoice_partner_wizard.report_invoice_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
