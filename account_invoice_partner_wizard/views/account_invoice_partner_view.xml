<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="invoice_form">
        <field name="name">account.invoice.partner.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="res_company_invoice_sequence.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='information_company_id']" position="replace">
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="account_invoice_partner_form">
        <field name="name">account.invoice.partner.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="res_company_invoice_sequence.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_partner_wizard']" position="replace">
            </xpath>
            <xpath expr="//button[@name='invoice_cancel']" position='after'>
                <field name="printed" invisible="1"/>
                <field name="email_sent" invisible="1"/>
                <button name="action_invoice_partner_wizard" type="object"
                    string="Generate"
                    attrs="{'invisible':['|',('email_sent','=',True),('state', 'not in', ['open'])]}"
                    class="oe_highlight" groups="base.group_user"/>
            </xpath>
            <xpath expr="//page[2]" position='after'>
                <page string="Company Info">
                    <group>
                        <group string="Company General Information">
			    <field name="information_company_id"/>
                            <field name="vat"/>
                            <field name="city"/>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="website"/>
                            <field name="control_code"/>
                        </group>
                        <group string="Company Numbers">
                            <field name="authorization_num"/>
                            <field name="final_num"/>
                            <field name="issuance_deadline"/>
                            <field name="account_key"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
