<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_edi_invoice_partner" model="mail.template">
            <field name="name">Invoice Qr - Send by Email</field>
            <field name="email_from">${(object.partner_id.email and '%s &lt;%s&gt;' % (object.partner_id.name, object.partner_id.email) or '')|safe}</field>
            <field name="subject">${object.information_company_id.name|safe} Invoice </field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="report_name">Invoice_${(object.partner_id.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="model_id" ref="account_invoice_partner_wizard.model_account_invoice_partner_wizard"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="account_invoices_wizard"/>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Hello ${object.partner_id.name},</p>
    <p>A new invoice is available for you: </p>
</div>
            ]]></field>
        </record>
    </data>
</odoo>
