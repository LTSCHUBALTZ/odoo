<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="account_invoice_res_company_form">
        <field name="name">account.invoice.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="procurement.mrp_company"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='logistics_grp']" position="before">
                <group name="account_grp2" string="Company Numbers">
                    <field name="authorization_num" required="1"/>
                    <field name="init_num" required="1"/>
                    <field name="final_num" required="1"/>
                    <field name="next_num" required="1"/>
                    <field name="issuance_deadline" required="1"/>
                    <field name="state"/>
                    <field name="account_key" required="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
